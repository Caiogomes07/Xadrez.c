#include <stdio.h>

int main() {

    // ========================================
    // DECLARAÇÃO DAS QUANTIDADES DE MOVIMENTO
    // ========================================

    int casasTorre = 5;
    int casasBispo = 5;
    int casasRainha = 8;

    int contador;

    // ========================================
    // MOVIMENTO DA TORRE (estrutura FOR)
    // A torre irá se mover 5 casas para a direita
    // ========================================

    printf("Movimento da Torre:\n");

    for (contador = 1; contador <= casasTorre; contador++) {
        printf("Direita\n");
    }

    // ========================================
    // MOVIMENTO DO BISPO (estrutura WHILE)
    // O bispo irá se mover 5 casas na diagonal
    // (Cima e Direita ao mesmo tempo)
    // ========================================

    printf("\nMovimento do Bispo:\n");

    contador = 1;

    while (contador <= casasBispo) {
        printf("Cima Direita\n");
        contador++;
    }

    // ========================================
    // MOVIMENTO DA RAINHA (estrutura DO-WHILE)
    // A rainha irá se mover 8 casas para a esquerda
    // ========================================

    printf("\nMovimento da Rainha:\n");

    contador = 1;

    do {
        printf("Esquerda\n");
        contador++;
    } while (contador <= casasRainha);

    return 0;
}
